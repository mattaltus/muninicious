<!DOCTYPE html>
<html>
  <head>
     <title><%= title %></title>
     <link rel="stylesheet" href="<%= url_for("/css/bootstrap.min.css") %>" />
     <script src="<%= url_for("/js/jquery.min.js") %>"></script>
     <script language="javascript" src="<%= url_for("/js/bootstrap.min.js") %>"></script>
  </head>
  <body>


    <nav class="navbar navbar-default">
       <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <a class="navbar-brand" href="#">Muninlicious</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Groups<span class="caret"></span></a>
                  <ul class="dropdown-menu" role="menu">
% foreach my $group (@{$config->getDatafile->groups}) {
                    <li class="text-capitalize"><a href="/group/<%= $group->name %>"><%= $group->name %></a></li>
% }
                  </ul>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Hosts<span class="caret"></span></a>
                  <ul class="dropdown-menu" role="menu">
% foreach my $host (@{$config->getDatafile->hosts}) {
                    <li class="text-uppercase"><a href="/host/<%= $host->name %>"><%= $host->name %></a></li>
% }
                  </ul>
                </li>
              </ul>
           </div><!-- /.navbar-collapse -->
         </div><!-- /.container-fluid -->
       </nav>

    <div class="container">
       <%= content %>
    </div>
  </body>
</html>
